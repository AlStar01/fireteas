{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "(auth != null) && ($uid === auth.uid)",
        ".write": "(auth != null) && ($uid === auth.uid)"
      }
    },
    "brews": {
      ".read": "(auth != null)",
      "$brewId": {
        ".write": "(auth != null)",
        ".validate": "(newData.hasChildren(['brewTime','type','completedDate']))"
      },
      ".indexOn": ["uid"]
    }
  }
}
