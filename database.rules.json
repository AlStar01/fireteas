{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "(auth != null) && ($uid === auth.uid)",
        ".write": "(auth != null) && ($uid === auth.uid)"
      }
    },
    "user-brews": {
      "$uid": {
        ".read": "(auth != null)",
        ".write": "(auth != null) && ($uid === auth.uid)",
        "$brewId": {
          ".validate": "newData.hasChildren(['brewTime', 'completedDate','type', 'uid'])"
        }
      }
    },
    "brews": {
      ".read": "(auth != null)",
      ".write": "(auth != null)",
      "$brewId": {
        ".validate": "newData.hasChildren(['brewTime', 'completedDate','type', 'uid', 'displayName', 'photoURL'])"
      }
    }
  }
}
